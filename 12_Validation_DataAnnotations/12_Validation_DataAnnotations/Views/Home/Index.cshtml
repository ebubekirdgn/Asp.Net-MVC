@model AspNetMvcValidations.Models.Kullanici

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    @*Bu paketler istemci tarafında doğrulama yapmayı sağlar.Bu sayede ilgili componentlere daha metin girilirken
        hata mesajları görünür ve hatalar kalkmadan form post işlemine girmez.jquery paketini gerektirir.*@
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    <style>
        /* Madde işaretini kaldırır */
        .validation-summary ul {
            list-style-type: none;
        }

        /* Hata oluştuğunda inputa uygulanacak class. (Hata oluştuğunda bu class ilgili inputa otomatik eklenir.) */
        .input-validation-error {
            border-color: red;
        }

        /* Hata mesajının olduğu span'e uygulanan class. (Hata oluştuğunda bu class ilgili inputa otomatik eklenir.) */
        .field-validation-error {
            background-color: #d0bebe;
            color: white;
            margin-top: 0.5px;
            border-radius: 5px;
            padding: 3px;
            position: relative;
            float: right;
        }
    </style>
</head>
<body>
