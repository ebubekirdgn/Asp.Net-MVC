@using _8_EntityFrameworkCodeFirst.ViewModels.Home
@model HomePageViewModel

@{
    ViewBag.Title = "homepage";
}

<div class="container-fluid">


    <div class="row">

        <div class="col-md-12">
            <h2>homepage</h2>
            <hr />
        </div>
    </div>


    <div class="row">

        <div class="col-md-6">

            @* insert *@
            <div>
                @Html.ActionLink("Kişi Ekle", "Yeni", "Kisi", null, new { @class = "btn btn-primary btn-sm" })
            </div>
            <br />

            @* select *@
            <ul class="list-group">
                <li class="list-group-item active">Kişiler</li>
                @foreach (var kisi in Model.Kisiler)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span>
                            <i class="fa fa-user" style="color:green"></i>
                            @($" {kisi.Ad} {kisi.Soyad} ")(<i>@kisi.Yas</i>)
                        </span>

                        <span>
                            @Html.ActionLink(" ", "Sil", "Kisi", new { id = kisi.Id }, new { @class = "fa fa-remove", style = "color:red", title = "Sil" }) &nbsp;
                            @Html.ActionLink(" ", "Duzenle", "Kisi", new { id = kisi.Id }, new { @class = "fa fa-edit", style = "color:blue", title = "Düzenle" })
                        </span>
                    </li>
                }
            </ul>
        </div>

        <div class="col-md-6">

            <div>
                @Html.ActionLink("Adres Ekle", "Yeni", "Adres", null, new { @class = "btn btn-primary btn-sm" })
            </div>
            <br />

            <ul class="list-group">
                <li class="list-group-item active">Adresler</li>
                @foreach (var adres in Model.Adresler)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span>
                            <i class="fa fa-home" style="color:red"></i>&nbsp;
                            @adres.AdresTanim (<i>@($"{adres.Kisi.Ad} {adres.Kisi.Soyad}")</i>)
                        </span>

                        <span>
                            @Html.ActionLink(" ", "Sil", "Adres", new { id = adres.Id }, new { @class = "fa fa-remove", style = "color:red", title = "Sil" }) &nbsp;
                            @Html.ActionLink(" ", "Duzenle", "Adres", new { id = adres.Id }, new { @class = "fa fa-edit", style = "color:blue", title = "Düzenle" })
                        </span>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>