@using System.Web.Optimization
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    @Styles.Render("~/css/all")
    @Scripts.Render("~/js/all")

</head>
<body>

    <div class="container body-content">
        @RenderBody()
    </div>

    @*jdn çalışmazsa jquery'i localden yükler.*@
    <script type="text/javascript">
        if (typeof jQuery == 'undefined') {  // JQuery nesnesi var mı?
            var e = document.createElement('script');    // script elementi oluştur
            e.src = '@Url.Content("~/Scripts/jquery-2.2.4.js")';
            e.type = 'text/javascript';
            document.getElementsByTagName("head")[0].appendChild(e);  // head elementinin içine ekle
        }
    </script>
</body>
</html>