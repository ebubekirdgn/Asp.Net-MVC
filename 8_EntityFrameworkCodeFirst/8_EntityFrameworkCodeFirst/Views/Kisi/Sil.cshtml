@model Kisiler
@{
    ViewBag.Title = "Sil";
}

<h2>Kişi Sil</h2>
<hr />

<p>
    Kişiyi silmek istediğinizden emin misiniz?
</p>

<style>
    .wd span {
        width: 60px;
    }
</style>


<div class="col-md-4 wd">
    <div class="input-group input-group-sm mb-1">
        <div class="input-group-prepend"><span class="input-group-text" id="txtAd"> Ad </span></div>
        @Html.TextBoxFor(x => x.Ad, new { @class = "form-control", aria_describedby = "txtAd", @readonly = "readonly" })
    </div>

    <div class="input-group input-group-sm mb-1">
        <div class="input-group-prepend">
            <span class="input-group-text" id="txtSoyad"> Soyad </span>
        </div>
        @Html.TextBoxFor(x => x.Soyad, new { @class = "form-control", aria_describedby = "txtSoyad", @readonly = "readonly" })
    </div>

    <div class="input-group input-group-sm mb-1">
        <div class="input-group-prepend">
            <span class="input-group-text" id="txtYas"> Yaş </span>
        </div>
        @Html.TextBoxFor(x => x.Yas, new { @class = "form-control", aria_describedby = "txtYas", @readonly = "readonly" })
    </div>

    @using (Html.BeginForm())
    {
        <div class="input-group input-group-sm mb-4">
            <input type="submit" value="Sil" class="btn btn-success" />
        </div>
    }

    <div class="input-group input-group-sm mb-1">
        @if (ViewBag.Result != null)
        {
            <div class="alert alert-@ViewBag.Status " role="alert">@ViewBag.Result</div>
        }
    </div>

</div>



